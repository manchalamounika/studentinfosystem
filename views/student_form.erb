<label for="first_name">First Name:</label>
<input id="first_name" name="record[first_name]" type="text" required placeholder="firstname" value="<%= @record.first_name %>" />

<label for="last_name">Last Name:</label>
<input id="last_name" name="record[last_name]" type="text" required placeholder="lastname" value="<%= @record.last_name %>" />

<label for="student_id">Student ID:</label>
<input id="student_id" name="record[student_id]" type="number" required placeholder="only numbers" value="<%= @record.student_id %>" />

<label for="address">Address:</label>
<input id="address" name="record[address]" type="text" required placeholder="Address" value="<%= @record.address %>" />

<label for="major">Major:</label>
<input id="major" name="record[major]" type="text" required placeholder="Major" value="<%= @record.major %>" />

<label for="birthday">Birth Date:</label>
<input id="birthday" name="record[birthday]" type="Date" required value="<%= @record.birthday %>" />

